<tr id="topic-<%= topic.id %>" class="<%= row_class %>">
  <td><%= link_to h(truncate(topic.title, :length => 35)), category_post_url(topic.category, topic) %><em><% if topic.user != nil %> <%= truncate(h(topic.user.name),:length => 20) %><% else %> Unknown User <% end %> </em></td>
  <td class="center" > <%= topic.comments.count %></td>
  <td><a href="xxx"><%= formatted_date topic.updated_at %></a><em>author</em></td>
</tr>
