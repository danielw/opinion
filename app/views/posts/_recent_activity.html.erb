
<table border="0" cellspacing="0" cellpadding="5" class="recent-activity" width="100%">
  <% for post in recent_activity %>
    <% row = row_class "list" %>
    <tr class="<%= row %>">
      <td class="date"><%=  recent_date(post.created_at) %><!-- <br /><%= z(post.created_at).strftime("%H:%M%p").downcase %> --></td>
      <td>
        <% if post.class == Topic %>
          <p><em><%= h post.user.name %> started topic <%= link_to h(post.title), category_post_url(post.category, post) %> </em><br /><%= h(truncate(post.body, :length => 140).gsub(/<\/?[^>]*>/,  "")).gsub(/\s/, '&nbsp;' ) %></p>
        <% else %>
          <p><em><%= h post.user.name %> commented on <%= link_to h(post.topic.title), :controller => "posts", :action => "show", :id => post.topic, :category_id => post.category, :anchor => "comment-#{post.id}" %></em><br /><%= h(truncate(post.body, :length => 140).gsub(/<\/?[^>]*>/,  "")).gsub(/\s/, '&nbsp;' ) %></p>
        <% end %>      
      </td>
      <td>
        <%= link_to post.category.title, category_url(post.category) %>
      </td>
    </tr>
  <% end %>
</table>
