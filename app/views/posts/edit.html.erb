<% title "Edit Post" %>

<% crumb @post.category.title, category_url(@post.category) %>
<% crumb "Edit post", edit_category_post_url(@post.category, @post), :class => 'active' %>

<div class="col-10">

  <h2>Edit post</h2>

  <div id="post">
    <% form_for(:post, @post, :url => category_post_url(@post.category,@post), :html => {:method => 'put', :id => 'post-form', :multipart => true}) do |form| %>   
      <dl>
      
        <% if @post.is_topic? %>
        <dt>
          <label for="post_title">Topic name</label>
          <span class="hint">title of the post</span>
        </dt>
        <dd><%= form.text_field 'title' %></dd>
        <% end %>

        <dt>
          <label for="post_body">Message</label>
        </dt>
        <dd>
        <% use_tinymce -%>
        <%= form.text_area 'body', :id => 'comment_body' %></dd>
      </dl>
  
      <%= image_submit_tag("/images/forums/btn-save.png", :style => "margin:0; vertical-align:middle") %> 
      <% if @post.is_topic? %>
      or <%= link_to 'Cancel', category_post_url(@post.category, @post) %>
      <% else %>
   or <%= link_to 'Cancel', category_post_url(@post.category, @post.topic) %>
      <% end %>
      
    <% end %>
  </div>
  
</div><!-- col-6 -->


