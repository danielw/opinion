<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<title><%= h(title) %></title>

		<%= rss_feed_for_page %>

		<!-- import the stylesheet css files -->
		
		<link href="/stylesheets/support.css" rel="stylesheet" type="text/css" media="all" />
		<link href="/stylesheets/lightbox.css" rel="stylesheet" type="text/css" media="all" />

    <!--[if IE 7]>
    <link rel="stylesheet" href="/stylesheets/ie7.css" type="text/css" media="screen" title="no title" charset="utf-8" />
    <![endif]-->

    

    <script src="http://ajax.googleapis.com/ajax/libs/prototype/1.6.1.0/prototype.js"></script>
    <%= yield :tinymce %>
    <script src="http://ajax.googleapis.com/ajax/libs/scriptaculous/1.8.2/scriptaculous.js"></script> 
    <%= javascript_include_tag "effects" %> 
    <%= javascript_include_tag "controls" %>
    <%= yield :tinymce_init %>
    
    <script src="/javascripts/cufon.js" type="text/javascript"></script>
    <script src="/javascripts//myriadpro.js" type="text/javascript"></script>

    <script type="text/javascript">
    Cufon.replace('h1')('h2')('h3')('h1 a');
    </script>
    
		<!-- import the DOM logic from external javascript files -->
		<script type="text/javascript" src="/javascripts/flash.js"></script>
    <!-- <script type="text/javascript" src="/javascripts/prototype.js"></script> -->
		<!-- <script type="text/javascript" src="/javascripts/effects.js"></script> -->
		<script type="text/javascript" src="/javascripts/opinion.js"></script>
		<script type="text/javascript" src="/javascripts/lightbox.js"></script>
 		<script type="text/javascript" language="javascript" charset="utf-8"> 		
  		Event.observe(window, 'load', function() {
        <%= js_flash_notices %>
        <%= js_error_notices %>
      });
    </script>
	</head>
	
	<body>
    <div id="flash">
      <ul id="flash-errors" style="display:none; overflow:hidden"><li>&nbsp;</li></ul>
      <ul id="flash-notice" style="display:none; overflow:hidden"><li>We updated your profile</li></ul>
    </div>
    
  <div id="wrapper">
    
      <div class="content support-nav">   
        <a href="http://www.shopify.com/support/"><%= image_tag('../images/support/supportlogo-header.gif') %></a>
        <ul>
          <li class="back-to-shopify"><a href="http://www.shopify.com">&lsaquo; back to shopify</a></li>
          <li><a href="http://wiki.shopify.com/Main_Page" title="Main Page - Shopify Wiki">wiki</a></li>
          <li class="current"><a href="http://forums.shopify.com/" title="Home">forums</a></li>
          <li><a href="http://api.shopify.com/" title="Shopify API Documentation">developers</a></li>
          <li class="last"><a href="http://support.myshopify.com/" title="Welcome - Shopify Support">support request</a></li>
        </ul>
      </div><!-- .content support-nav -->
      
      <div class="content support-container " >
        <div class="masthead clearfix">  
          <div class="masthead-wrapper clearfix">  
            <h1><a href="/">Community Forums</a></h1>       
            <% if @user %>
            <p class="login-area">logged in as <%= link_to @user.name, :controller => 'users', :action => 'show', :id => @user %> | <% if superuser? %><%= link_to 'admin', admin_url %> | <%= link_to 'userlist', :controller => 'users', :action => 'list' %> |  <% end %>  <%= link_to 'logout', {:controller => 'accounts', :action => 'logout'}, :class => 'strong' %></p>
            <% else %>
            <p class="login-area"><%= link_to 'register', accounts_url(:action => 'new') %> | <%= link_to 'login', accounts_url(:return_to => request.path), :class => 'strong' %></p>
            <% end %>
          </div><!-- .masthead-wrapper -->
          <ul class="forum-breadcrumbs clearfix">
            <li class="home"><a href="<%= index_url %>">Home</a></li>
            <%= breadcrumbs %>
          </ul>
          
          <div class="search">
            <form id="search-form" action="/search/posts" method="get"> 
              <input type="text" name="q" id="search-query" value=""  /> 
              <input type="image"  src="/images/forums/btn-search-sml.png" id="search" name="search"  />
            </form>
          </div><!-- .search -->
        </div><!-- .masthead -->
        
    <!-- <div id="header">
      <div id="title"><%= h(title) %></div>
    </div> -->

    
    <div id="content">

      <!-- <div id="search">
        <div id="searchbox">
          <form id="search-form" action="/search/posts" method="get">
            <input type="text" name="q" id="search-query" value="" /> <span onclick="$('search-form').submit()">Search</span>
          </form>
        </div>
      </div> -->
	    	
	    <div id="main-content" style="clear: both;">
   	    <div id="spinner" style="display:none; overflow:hidden">
        </div>
	      	<%= @content_for_layout %>  
	    </div>
    </div>
    
    </div><!-- #support-container -->
    <div id="push"></div><!-- .push -->
    </div><!-- wrapper -->
    
    <div id="footer">
       <div id="footer-wrapper">
         <div class="col-3">
           <h3>Forums</h3>
           <ul>
             <%# @categories.each do |category| %>
             <li>Introduction</li>
             <li>Running your store</li>
             <li>Marketing</li>
             <li>Customization</li>
             <li>Hosting &amp; Security</li>
             <li>App Store </li>
             <%# end %>

           </ul>
         </div>
         <div class="col-3">
           <h3>Resources</h3>
           <ul>
             <li>Wiki</li>
             <li>Technical Support</li>
             <li>API Documentation</li>
             <li>Forums</li>
           </ul>
         </div>
         <div class="col-3">
           <h3>Shopify</h3>
           <ul>
             <li>Blog</li>
             <li>About Us</li>
             <li>Terms &amp; Conditions</li>
             <li>Privacy</li>
           </ul>
         </div>
         <div class="col-3 contact-us last ">
           <h3>Contact us</h3>
           <ul>
             <li>866.704.0252</li>
             <li><a href="http://www.shopify.com/contact"> Email us</a></li>
             <li><a href="http://twitter.com/shopify">Twitter</li>
           </ul>
         </div>

         <div class="col-12 center last clear">
           <p class="copyright">&copy; 2006-2008 jadedPixel Inc. |	Shopify is a registered trademark of jadedPixel Inc. | Shopify - A shop in minutes, a business for life.</p></div>

         </div>

       </div><!-- #footer -->

	
	  <div id="dialog-overlay" style="display:none">
    </div>
    <div id="dialog-content" style="display:none">
    </div>
	

	
	</body>
	<script type="text/javascript"> Cufon.now(); </script>
</html>

