<% title "Lost your password?" %>

<div class="mini-form">
  <%= form_remote_tag :url => (accounts_url(:action => 'password_recovery')) %>

      <label for="user_email">Please give us your email address</label>
      <span class="hint"></span>

    <%= text_field 'user', 'email' %>

  <p class="submit"><input name="submit" type="image" src="/images/forums/btn-send.gif" value="Send" /> or <%= link_to 'Cancel', index_url %></p>
  </form>
</div>